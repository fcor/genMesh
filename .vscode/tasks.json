{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build openFrameworks",
      "type": "shell",
      "command": "make",
      "args": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run openFrameworks",
      "type": "shell",
      "command": "${workspaceFolder}/bin/ofGenMesh.app/Contents/MacOS/ofGenMesh",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
